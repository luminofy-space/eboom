{
    "name": "pfm-backend",
    "version": "0.1.0",
    "description": "Personal Finance Management (PFM) backend using Express.js and Supabase Postgres",
    "main": "src/app.ts",
    "scripts": {
        "build": "tsc",
        "start": "node dist/app.js",
        "dev": "nodemon",
        "type-check": "tsc --noEmit",
        "db:generate": "drizzle-kit push",
        "db:migrate": "tsx src/db/migrate.ts",
        "db:seed": "tsx src/db/seed/seed.ts",
        "db:seed:safe": "tsx src/db/seed/seed-safe.ts",
        "db:seed:hybrid": "tsx src/db/seed/seed-hybrid.ts",
        "db:seed:specific": "tsx src/db/seed/seed-specific.ts",
        "db:studio": "drizzle-kit studio",
        "db:push": "drizzle-kit push:pg",
        "db:drop": "drizzle-kit drop",
        "db:reset": "tsx src/db/reset.ts"
    },
    "dependencies": {
        "@supabase/supabase-js": "^2.28.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/nodemailer": "^7.0.4",
        "bcryptjs": "^3.0.3",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "drizzle-kit": "^0.31.8",
        "drizzle-orm": "^0.45.1",
        "express": "^4.18.2",
        "express-rate-limit": "^8.2.1",
        "helmet": "^6.0.1",
        "joi": "^17.8.3",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "nodemailer": "^7.0.10",
        "pg": "^8.11.0",
        "postgres": "^3.4.8",
        "uuid": "^9.0.0",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.5",
        "@types/morgan": "^1.9.10",
        "@types/node": "^24.10.11",
        "@types/uuid": "^9.0.8",
        "nodemon": "^2.0.22",
        "ts-node": "^10.9.2",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    }
}
